{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "module": "es2020",
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@my-org/some-lib/*": [
        "projects/some-lib/*",
        "projects/some-lib"
      ],
      "@my-org/some-lib": [
        "dist/some-lib/*",
        "dist/some-lib"
      ]
    }
  }
}

